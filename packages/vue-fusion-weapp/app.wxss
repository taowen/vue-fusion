.flex-row {
  display: flex;
  flex-direction: row;
}
.inline-flex-row {
  display: inline-flex;
  flex-direction: row;
}
.flex-col {
  display: flex;
  flex-direction: column;
}
.inline-flex-col {
  display: inline-flex;
  flex-direction: column;
}

.grow {
  flex-grow: 1;
}

.w-2 {
  width: 0.5em;
}

.w-4 {
  width: 1em;
}

.h-2 {
  height: 0.5rem;
}

.gap-1 {
  gap: 0.25rem;
}

.gap-2 {
  gap: 0.5rem;
}

.gap-4 {
  gap: 1rem;
}

.no-scrollbar::-webkit-scrollbar {
  width: 0px;
  height: 0px;
  color:#transparent;
}