.flex-row {
  display: flex;
  flex-direction: row;
}
.inline-flex-row {
  display: inline-flex;
  flex-direction: row;
}
.flex-col {
  display: flex;
  flex-direction: column;
}
.inline-flex-col {
  display: inline-flex;
  flex-direction: column;
}
.justify-around {
  justify-content: space-around;
}
.items-center {
  align-items: center;
}
.grow {
  flex-grow: 1;
}

.m-2 {
  margin: 0.5em;
}

.w-full {
  width: 100%;
}
.w-2 {
  width: 0.5em;
}
.w-4 {
  width: 1em;
}
.h-2 {
  height: 0.5rem;
}
.gap-1 {
  gap: 0.25rem;
}
.gap-2 {
  gap: 0.5rem;
}
.gap-4 {
  gap: 1rem;
}
.color-1 {
  color: var(--color-1);
}
.color-2 {
  color: var(--color-2);
}
.color-3 {
  color: var(--color-3);
}
.color-4 {
  color: var(--color-4);
}
.font-bold	{
  font-weight: 700;
}
.font-thin {
  font-weight: 100;
}
.no-scrollbar::-webkit-scrollbar {
  width: 0px;
  height: 0px;
  color:#transparent;
}