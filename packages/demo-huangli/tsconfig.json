{
  "compilerOptions": {
      "target": "esnext",
      "declaration": true,
      "useDefineForClassFields": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "incremental": true,
      "strict": true,
      "noImplicitThis": true,
      "jsx": "react",
      "jsxFactory": "fusion.h",
      "jsxFragmentFactory": "fusion.Fragment",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "lib",
      "lib": ["esnext"],
      "types": ["jest"]
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.d.ts",
      "test/**/*.ts",
      "test/**/*.tsx"
  ]
}