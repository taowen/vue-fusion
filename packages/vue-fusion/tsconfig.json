{
    "compilerOptions": {
        "paths": {
            "vue-fusion": ["./src/renderer"],
            "vue-fusion/server": ["./src/server"],
            "vue-fusion/client": ["./src/client"]
        },
        "target": "esnext",
        "declaration": true,
        "useDefineForClassFields": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "incremental": true,
        "strict": true,
        "noImplicitThis": true,
        "jsx": "react",
        "jsxFactory": "fusion.h",
        "jsxFragmentFactory": "fusion.Fragment",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "publish/lib",
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
    ]
}